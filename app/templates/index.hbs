<div class="container-fluid index">
  <div class="logo">
    <a href="/">
      <img src="/img/StickyUnit.png">
    </a>
  </div>
  <div class="header row">
    <span class="title">
      {{input valueBinding="unit.title" placeholder="<type your unit name>" class="title-input" sizeBinding="unit.titleLength"}}
    </span>
    <button class="btn btn-primary btn-standards" {{action 'openModal' 'standards' 'modal'}}>Choose my standards</button>
    {{#if unit.standard}}
      <div class="panel panel-default panel-standards">
        <div class="panel-heading cursor-pointer" data-toggle="collapse" href="#collapseStandards">
          <h4 class="panel-title">
            {{unit.standard}}
            <span class="pull-right glyphicon glyphicon-chevron-down"></span>
          </h4>
        </div>
        <div id="collapseStandards" class="panel-collapse collapse">
          <div class="panel-body">
            {{unit.detail}}
          </div>
        </div>
      </div>
    {{/if}}
  </div>

  <div class="whiteboard row">
    <div class="row">
      <!-- GOALS ROW -->

      <div class="col-md-12 heading">
        <h3>GOALS</h3>
      </div>

      <div class="col-md-4">
        <b class="section-title">Knowledge and Skills</b><br>
        <a href="home-route">
          What are Knowledge and Skills?
          <i class="glyphicon glyphicon-facetime-video"></i>
        </a>
        {{view 'stickystack' section="goals-knowledgeskill"}}
        {{!--
        <div {{action 'openModal' 'template_name' 'modal3'}}>test</div>
        --}}
        {{!-- <div class="sticky center-block cursor-pointer" {{action 'openStickyListModal' 'goals-knowledgeskill' 'modal'}}>
          goals-knowledgeskill
        </div> --}}
      </div>

      <div class="col-md-4">
        <b class="section-title">Enduring Understandings</b><br>
        <a href="home-route">
          What are Enduring Understandings?
          <i class="glyphicon glyphicon-facetime-video"></i>
        </a>
        {{view 'stickystack' section="goals-enduringunderstanding"}}
      </div>

      <div class="col-md-4">
        <b class="section-title">Big Idea</b><br>
        <a href="home-route">
          What is a Big Idea?
          <i class="glyphicon glyphicon-facetime-video"></i>
        </a>

        {{view 'stickystack' section="goals-bigidea"}}
      </div>
    </div>

    <div class="row">
      <!-- EVIDENCE ROW -->

      <div class="col-md-12 heading">
        <h3>EVIDENCE</h3>
      </div>

      <div class="col-md-4">
        <b class="section-title">Evidence of Knowledge and Skills</b><br>
        <a href="home-route">
          How do I create this evidence?
          <i class="glyphicon glyphicon-facetime-video"></i>
        </a>

        {{view 'stickystack' section="evidence-knowledge"}}
      </div>

      <div class="col-md-4">
        <b class="section-title">Evidence of Understandings</b><br>
        <a href="home-route">
          How do I create this evidence?
          <i class="glyphicon glyphicon-facetime-video"></i>
        </a>

        {{view 'stickystack' section="evidence-understanding"}}
      </div>

      <div class="col-md-4">
        <b class="section-title">Evidence of Big Idea</b><br>
        <a href="home-route">
          How do I create this evidence?
          <i class="glyphicon glyphicon-facetime-video"></i>
        </a>

        {{view 'stickystack' section="evidence-idea"}}
      </div>
    </div><!-- ASSESSMENTS ROW -->

    <div class="row">
      <div class="col-md-12 heading">
        <h3>ASSESSMENTS</h3>
      </div>

      <div class="col-md-4">
        <b class="section-title">Performance Tasks</b><br>
        <a href="home-route">
          What are performance tasks?
          <i class="glyphicon glyphicon-facetime-video"></i>
        </a>


        {{view 'stickystack' section="assessments-performancetasks"}}
      </div>

      <div class="col-md-4">
        <b class="section-title">Academic Prompts</b><br>
        <a href="home-route">
